    <script>
        document.body.addEventListener('click', function(event) {
            const dimaPopup = document.getElementById('dima-popup');
            dimaPopup.style.display = 'block';
            dimaPopup.style.left = `${event.clientX}px`;
            dimaPopup.style.top = `${event.clientY}px`;

            setTimeout(() => {
                dimaPopup.style.display = 'none';
            }, 2000);
        });

        // لتحريك القلب بشكل عشوائي
        function randomPosition(element) {
            const x = Math.floor(Math.random() * window.innerWidth);
            const y = Math.floor(Math.random() * window.innerHeight);
            element.style.left = `${x}px`;
            element.style.top = `${y}px`;
        }

        const heart = document.getElementById('heart');
        setInterval(() => randomPosition(heart), 1000);
    </script>
